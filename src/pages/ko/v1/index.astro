---
import Layout from "../../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";
import SecurityPartner from "../../../components/SecurityPartner.astro";
import CTADialog from "../../../lib/components/CTADialog";
import LanguageSwitch from "../../../lib/components/LanguageSwitch";

changeLanguage("ko");
---

<Layout title="ADEN - Pro-Grade Order Book DEX for Everyone">
  <!-- Navigation -->
  <nav
    class="fixed top-7 left-1/2 transform -translate-x-1/2 z-50 w-[343px] md:w-[1240px] max-w-[calc(100vw-2rem)]"
  >
    <div
      class="bg-white/[0.04] backdrop-blur-[10px] border border-white/[0.12] rounded-2xl px-[10px] md:px-6 py-2 flex justify-between items-center"
    >
      <!-- Logo -->
      <div class="flex items-center">
        <!-- Mobile Logo -->
        <div class="md:hidden flex items-center gap-1">
          <img
            src={`${import.meta.env.BASE_URL}/bgsc-logo.svg`}
            alt="BGSC Logo"
            class="w-4 h-4"
          />
          <svg
            width="53"
            height="16"
            viewBox="0 0 53 16"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M12.7754 15.1757L11.6284 11.9806H6.3223L5.1752 15.1757H2.3604L7.7368 0.82782H10.2807L15.6572 15.1757H12.7719H12.7754ZM8.9753 4.59004L7.3075 9.21179H10.6396L8.9718 4.59004H8.9753Z"
              fill="white"></path>
            <path
              d="M21.885 15.1228H16.9941V0.877136H21.885C25.8294 0.877136 28.5528 3.94891 28.5528 7.96124V8.00351C28.5528 12.0123 25.8294 15.1264 21.885 15.1264V15.1228ZM25.664 7.99999C25.664 5.47775 24.1404 3.70585 21.8815 3.70585H19.7492V12.2941H21.8815C24.1404 12.2941 25.664 10.5645 25.664 8.03874V7.99647V7.99999Z"
              fill="white"></path>
            <path
              d="M29.8824 15.1228V0.877136H39.344V3.6671H32.6234V6.55569H38.5382V9.34565H32.6234V12.3364H39.4319V15.1264H29.8789L29.8824 15.1228Z"
              fill="white"></path>
            <path
              d="M52.9998 13.1466L50.2764 9.08145V0.877136H52.9998V13.1466Z"
              fill="#EDA320"></path>
            <path
              d="M52.9017 15.1228H49.5661L43.4929 6.06604V15.1228H40.7695V0.877136H43.3135L52.9017 15.1228Z"
              fill="white"></path>
          </svg>
        </div>

        <!-- Desktop Logo -->
        <div class="hidden md:flex items-center gap-2">
          <img
            src={`${import.meta.env.BASE_URL}/bgsc-logo.svg`}
            alt="BGSC Logo"
            class="w-6 h-6"
          />
          <svg
            width="80"
            height="24"
            viewBox="0 0 80 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M19.371 22.7636L17.642 17.971H9.6445L7.9156 22.7636H3.6729L11.7765 1.24176H15.6108L23.7145 22.7636H19.3657H19.371ZM13.6433 6.88509L11.1295 13.8177H16.1518L13.638 6.88509H13.6433Z"
              fill="white"></path>
            <path
              d="M33.1022 22.6843H25.7305V1.31573H33.1022C39.0473 1.31573 43.1522 5.9234 43.1522 11.9419V12.0053C43.1522 18.0185 39.0473 22.6896 33.1022 22.6896V22.6843ZM38.7981 12C38.7981 8.21666 36.5017 5.5588 33.0969 5.5588H29.883V18.4412H33.0969C36.5017 18.4412 38.7981 15.8468 38.7981 12.0581V11.9947V12Z"
              fill="white"></path>
            <path
              d="M45.1567 22.6843V1.31573H59.4176V5.50068H49.288V9.83357H58.2031V14.0185H49.288V18.5046H59.5501V22.6896H45.1514L45.1567 22.6843Z"
              fill="white"></path>
            <path d="M80 19.72L75.8955 13.6222V1.31573H80V19.72Z" fill="#EDA320"
            ></path>
            <path
              d="M79.852 22.6843H74.824L65.6703 9.09909V22.6843H61.5654V1.31573H65.3998L79.852 22.6843Z"
              fill="white"></path>
          </svg>
        </div>
      </div>

      <!-- Mobile Navigation and Language Selector -->
      <div class="md:hidden flex items-center gap-4">
        <div class="flex items-center gap-4">
          <!-- <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Trade
          </a> -->
          <a
            href="#fee-section"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            {t("navigation.fee")}
          </a>
          <a
            href="#"
            class="support-btn text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            {t("navigation.support")}
          </a>
        </div>
        <button
          id="mobile-lang-toggle"
          class="flex items-center gap-1 px-2 py-[6px] border border-white/[0.12] bg-white/[0.04] backdrop-blur-[6px] rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)] cursor-pointer"
        >
          <span
            class="lang-text text-[#E8E8E8]/80 text-center font-play text-xs font-bold leading-4"
          >
            KR
          </span>
          <svg
            width="8"
            height="8"
            viewBox="0 0 8 8"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M1.47718 2.83731C1.56704 2.73248 1.72486 2.72033 1.82969 2.81019L4.00033 4.67074L6.17097 2.81019C6.2758 2.72034 6.43362 2.73248 6.52348 2.83731C6.61333 2.94214 6.60119 3.09996 6.49636 3.18982L4.16303 5.18982C4.06941 5.27007 3.93125 5.27007 3.83763 5.18982L1.5043 3.18982C1.39947 3.09996 1.38733 2.94214 1.47718 2.83731Z"
              fill="#EDA320"></path>
          </svg>
        </button>
      </div>

      <!-- Desktop Navigation Links -->
      <div class="hidden md:flex items-center gap-10">
        <!-- <a
          href="#"
          class="text-white/90 hover:text-white text-base font-pretendard"
        >
          Trade
        </a> -->
        <a
          href="#fee-section"
          class="text-white/90 hover:text-white text-base font-pretendard"
        >
          {t("navigation.fee")}
        </a>
        <a
          href="#"
          class="support-btn text-white/90 hover:text-white text-base font-pretendard"
        >
          {t("navigation.support")}
        </a>
      </div>

      <LanguageSwitch client:visible />
    </div>
  </nav>

  <!-- Hero Section -->
  <section
    class="relative h-[700px] md:h-[1024px] flex flex-col items-center px-4 md:px-[100px] pt-[30px] md:pt-[30px] pb-[150px] md:pb-0 gap-[100px] overflow-hidden"
  >
    <!-- Background Sky -->
    <div class="absolute inset-0 w-full h-[770px]">
      <!-- Orange Gradient Blur - Mobile -->
      <div
        class="md:hidden absolute left-0 top-[-107px] w-[374px] h-[213px] rounded-full bg-aden-primary blur-[250px]"
      >
      </div>

      <!-- Circular Gradient Overlay - Mobile -->
      <div
        class="md:hidden absolute left-1/2 top-[-30px] transform -translate-x-1/2 w-[400px] h-[250px] rounded-full bg-gradient-to-b from-black/80 to-transparent blur-[80px]"
      >
      </div>

      <!-- Orange Gradient Blur - Desktop -->
      <div
        class="hidden md:block absolute left-1/2 top-[-210px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-primary blur-[250px]"
      >
      </div>

      <!-- Desktop Coins and Sky -->
      <img
        src={`${import.meta.env.BASE_URL}/shiny_coins_loop.webp`}
        alt="Sky background"
        class="hidden md:block absolute left-1/2 transform -translate-x-1/2 top-[142px] w-[1240px] h-[882px] object-cover"
      />
      <img
        src={`${import.meta.env.BASE_URL}/sky_background.webp`}
        alt="Sky overlay"
        class="hidden md:block absolute left-0 top-0 w-full h-[924px] object-cover"
      />

      <!-- Dark Gradient Blur - Mobile -->
      <div
        class="md:hidden absolute left-[-176px] top-[178px] w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"
      >
      </div>

      <!-- Dark Gradient Blur - Desktop -->
      <div
        class="hidden md:block absolute left-1/2 top-[305px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"
      >
      </div>

      <!-- Mobile Coins Background - Centered with Hero Content -->
      <div
        class="md:hidden absolute top-[380px] left-0 w-full h-[400px] flex items-center justify-center overflow-hidden"
      >
        <img
          src={`${import.meta.env.BASE_URL}/shiny_coins_loop.webp`}
          alt="Coins background"
          class="absolute left-1/2 transform -translate-x-1/2 w-[600px] h-[400px] object-contain opacity-90"
        />
      </div>

      <!-- Mobile Sky Overlay -->
      <img
        src={`${import.meta.env.BASE_URL}/sky_background.webp`}
        alt="Sky overlay"
        class="md:hidden absolute left-0 top-0 w-full h-[600px] object-cover opacity-50"
      />
    </div>

    <!-- Hero Content -->
    <div
      class="relative z-10 flex flex-col items-center gap-[50px] w-full max-w-[343px] md:max-w-[1240px] mt-[100px] md:mt-[198px]"
    >
      <!-- Text Content -->
      <div class="flex flex-col items-center gap-10 md:gap-10 w-full">
        <div class="flex flex-col items-center gap-5 w-full">
          <!-- Badge -->
          <div
            class="flex items-center justify-center gap-3 px-3 py-2 bg-white/[0.12] backdrop-blur-[2px] rounded-xl"
          >
            <span
              class="text-white text-center font-pretendard text-xs md:text-sm font-medium leading-4 md:leading-5"
            >
              {t("hero.badge")}
            </span>
          </div>

          <!-- Main Heading -->
          <h1
            class="text-center font-pretendard text-[40px] md:text-6xl font-bold leading-[52px] md:leading-[80px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent w-full"
          >
            {t("hero.title")}
          </h1>

          <!-- Description -->
          <p
            class="w-full md:max-w-[678px] text-white/60 text-center font-pretendard text-[13px] md:text-lg leading-5 md:leading-7"
          >
            {t("hero.description")}
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex items-center gap-3 w-full md:w-auto md:justify-center">
          <CTADialog client:visible />
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-10 md:py-10">
    <div class="flex flex-col justify-center items-center gap-12 w-full">
      <div
        class="relative flex flex-col md:flex-row justify-center items-center gap-6 md:gap-6 w-full py-10 md:py-16 px-6 md:px-12 overflow-hidden"
      >
        <div class="flex flex-col items-center gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[50px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            $1.2B+
          </h3>
          <p
            class="text-[#666D80] text-center font-pretendard text-[13px] md:text-base font-medium leading-5 md:leading-6"
          >
            {t("statistics.cumulativeVolume")}
          </p>
        </div>
        <div class="flex flex-col items-center gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[50px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            85K+
          </h3>
          <p
            class="text-[#666D80] text-center font-pretendard text-[13px] md:text-base font-medium leading-5 md:leading-6"
          >
            {t("statistics.activeTraders")}
          </p>
        </div>
        <div class="flex flex-col items-center gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[50px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            150+
          </h3>
          <p
            class="text-[#666D80] text-center font-pretendard text-[13px] md:text-base font-medium leading-5 md:leading-6"
          >
            {t("statistics.tradableMarkets")}
          </p>
        </div>
        <div class="flex flex-col items-center gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[50px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            $125M
          </h3>
          <p
            class="text-[#666D80] text-center font-pretendard text-[13px] md:text-base font-medium leading-5 md:leading-6"
          >
            {t("statistics.dailyVolume")}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="relative w-full overflow-hidden">
    <div
      class="relative flex flex-col items-center gap-10 md:gap-20 w-full md:w-[1440px] mx-auto py-10 md:py-[100px] px-4 md:px-[100px]"
    >
      <!-- Orange Gradient Blur -->
      <div
        class="absolute -left-32 md:left-[403px] top-[842px] md:top-[356px] w-[634px] h-[360px] bg-[#EDA320] rounded-full blur-[500px] opacity-[0.32] pointer-events-none"
      >
      </div>

      <!-- Section Header -->
      <div
        class="flex flex-col justify-center items-center md:items-stretch gap-4 self-stretch"
      >
        <div
          class="flex items-center px-3 py-[6px] bg-[#2D281E] rounded-2xl w-fit"
        >
          <span
            class="text-white text-center font-pretendard text-xs md:text-sm font-bold leading-4 md:leading-5 tracking-[0.01em]"
          >
            {t("features.section.badge")}
          </span>
        </div>
        <h2
          class="text-center md:text-left font-pretendard text-[28px] md:text-5xl font-bold leading-10 md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
        >
          {t("features.section.title")}
        </h2>
      </div>

      <!-- Features Grid -->
      <div
        class="flex flex-col items-start gap-[10px] self-stretch p-4 md:p-6 border border-white/[0.12] bg-black/[0.04] rounded-3xl"
      >
        <div
          class="flex flex-col md:flex-row justify-stretch items-stretch gap-0 md:gap-6 self-stretch"
        >
          <!-- Feature Card 1 -->
          <div
            class="flex flex-col items-start gap-4 md:gap-6 flex-1 px-2 py-5 md:p-6 rounded-3xl w-full border-b md:border-b-0 border-white/[0.04]"
          >
            <div class="w-[235px]">
              <span
                class="text-[#EDA320] font-pretendard text-[13px] font-bold leading-5 tracking-[0.01em]"
              >
                {t("features.card1.badge")}
              </span>
            </div>

            <div class="flex flex-col items-stretch gap-2 self-stretch">
              <h3
                class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9 tracking-[-0.04em]"
              >
                {t("features.card1.title")}
              </h3>
              <p
                class="text-[#818898] font-pretendard text-[13px] md:text-base leading-5 md:leading-6 tracking-[-0.02em] h-[100px] md:h-[168px]"
              >
                {t("features.card1.description")}
              </p>
            </div>

            <div class="flex items-center justify-center h-[180px]">
              <div class="flex items-center justify-center gap-4">
                <img
                  src={`${import.meta.env.BASE_URL}/orderly-logo.svg`}
                  alt="Orderly Network"
                  class="w-[80px] h-[80px]"
                />
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  class="opacity-60"
                >
                  <path
                    d="M5.33594 2.6665L10.6693 7.99984L5.33594 13.3332"
                    stroke="#EDA320"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
                <svg
                  class="w-[101px] h-[26px]"
                  viewBox="30 0 80 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <g clip-path="url(#clip0_aden_logo)">
                    <path
                      d="M43.371 22.7636L41.642 17.971H33.6445L31.9156 22.7636H27.6729L35.7765 1.24176H39.6108L47.7145 22.7636H43.3657H43.371ZM37.6433 6.88509L35.1295 13.8177H40.1518L37.638 6.88509H37.6433Z"
                      fill="white"></path>
                    <path
                      d="M57.1022 22.6843H49.7305V1.31573H57.1022C63.0473 1.31573 67.1522 5.9234 67.1522 11.9419V12.0053C67.1522 18.0185 63.0473 22.6896 57.1022 22.6896V22.6843ZM62.7981 12C62.7981 8.21666 60.5017 5.5588 57.0969 5.5588H53.883V18.4412H57.0969C60.5017 18.4412 62.7981 15.8468 62.7981 12.0581V11.9947V12Z"
                      fill="white"></path>
                    <path
                      d="M69.1567 22.6843V1.31573H83.4176V5.50068H73.288V9.83357H82.2031V14.0185H73.288V18.5046H83.5501V22.6896H69.1514L69.1567 22.6843Z"
                      fill="white"></path>
                    <path
                      d="M104 19.72L99.8955 13.6222V1.31573H104V19.72Z"
                      fill="#EDA320"></path>
                    <path
                      d="M103.852 22.6843H98.824L89.6703 9.09909V22.6843H85.5654V1.31573H89.3998L103.852 22.6843Z"
                      fill="white"></path>
                  </g>
                  <defs>
                    <clipPath id="clip0_aden_logo">
                      <rect width="104" height="24" fill="white"></rect>
                    </clipPath>
                  </defs>
                </svg>
              </div>
            </div>

            <div class="flex flex-col items-stretch gap-2 self-stretch">
              <h4
                class="text-white font-pretendard text-lg md:text-2xl font-bold leading-7 md:leading-9 tracking-[-0.04em]"
              >
                {t("features.card1.subtitle")}
              </h4>
              <p
                class="text-[#818898] font-pretendard text-[13px] md:text-base leading-5 md:leading-6 h-[80px] md:h-[96px]"
              >
                <span set:html={t("features.card1.features")} />
              </p>
            </div>
          </div>

          <!-- Feature Card 2 -->
          <div
            class="flex flex-col items-start gap-4 md:gap-6 flex-1 px-2 py-5 md:p-6 rounded-3xl w-full border-b md:border-b-0 border-white/[0.04]"
          >
            <div class="w-[235px]">
              <span
                class="text-[#EDA320] font-pretendard text-[13px] font-bold leading-5 tracking-[0.01em]"
              >
                {t("features.card2.badge")}
              </span>
            </div>

            <div class="flex flex-col items-stretch gap-2 self-stretch">
              <h3
                class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9 tracking-[-0.04em]"
              >
                {t("features.card2.title")}
              </h3>
              <p
                class="text-[#818898] font-pretendard text-[13px] md:text-base leading-5 md:leading-6 tracking-[-0.02em] h-[100px] md:h-[168px]"
              >
                {t("features.card2.description")}
              </p>
            </div>

            <div class="flex items-center justify-center h-[180px]">
              <div class="flex items-center justify-center gap-4">
                <!-- Bithumb Logo -->
                <img
                  src={`${import.meta.env.BASE_URL}/bithumb-only.svg`}
                  alt="Bithumb"
                  class="h-[60px] w-auto"
                />
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  class="opacity-60"
                >
                  <path
                    d="M5.33594 2.6665L10.6693 7.99984L5.33594 13.3332"
                    stroke="#EDA320"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
                <!-- Bybit Logo -->
                <img
                  src={`${import.meta.env.BASE_URL}/bybit-logo.svg`}
                  alt="Bybit"
                  class="h-[50px] w-auto"
                />
              </div>
            </div>

            <div class="flex flex-col items-stretch gap-2 self-stretch">
              <h4
                class="text-white font-pretendard text-lg md:text-2xl font-bold leading-7 md:leading-9 tracking-[-0.04em]"
              >
                {t("features.card2.subtitle")}
              </h4>
              <p
                class="text-[#818898] font-pretendard text-[13px] md:text-base leading-5 md:leading-6 h-[80px] md:h-[96px]"
              >
                <span set:html={t("features.card2.features")} />
              </p>
            </div>
          </div>

          <!-- Feature Card 3 -->
          <div
            class="flex flex-col items-start gap-4 md:gap-6 flex-1 px-2 py-5 md:p-6 rounded-3xl w-full border-b md:border-b-0 border-white/[0.04]"
          >
            <div class="w-[235px]">
              <span
                class="text-[#EDA320] font-pretendard text-[13px] font-bold leading-5 tracking-[0.01em]"
              >
                {t("features.card3.badge")}
              </span>
            </div>

            <div class="flex flex-col items-stretch gap-2 self-stretch">
              <h3
                class="text-white font-pretendard text-xl md:text-2xl font-bold leading-8 md:leading-9 tracking-[-0.04em]"
              >
                {t("features.card3.title")}
              </h3>
              <p
                class="text-[#818898] font-pretendard text-[13px] md:text-base leading-5 md:leading-6 tracking-[-0.02em] h-[100px] md:h-[168px]"
              >
                {t("features.card3.description")}
              </p>
            </div>

            <div class="flex items-center justify-center h-[180px]">
              <div class="flex items-center justify-center gap-8 md:gap-12">
                <div class="flex items-center justify-center p-2">
                  <img
